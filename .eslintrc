{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "rules": {
    "semi": [2, "never"],
    "semi-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "indent": [2, 2],
    "eol-last": [2, "always"],
    "object-curly-spacing": [2, "always"],
    "array-bracket-spacing": [2, "never"],
    "prefer-const": "error",
    "no-await-in-loop": "error",
    "eqeqeq": [2, "always"],
    "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  }
}
